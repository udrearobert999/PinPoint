@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<IdentityUser> SignInManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiForgery

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @if (SignInManager.IsSignedIn(User))
    {
        <meta name="X-CSRF-TOKEN" content="@AntiForgery.GetAndStoreTokens(Context).RequestToken" />
    }

    <title>PinPoint</title>

    <link rel="icon" type="image/svg" href="~/icons/logo-head.svg"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/components/button.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/components/searchbar.css"/>
    <link rel="stylesheet" href="~/css/default-style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/root.css" asp-append-version="true"/>
</head>
<body>
<div class="page-wrapper">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/icons/logo.svg" alt="pinpoint-logo" class="logo-image"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between gap-2">
                    <ul class="navbar-nav d-flex align-items-center flex-grow-1 gap-2">
                        <li class="nav-item d-flex align-items-center">
                            <div class="button-a">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Create">Pin It!</a>
                            </div>
                        </li>
                        <li class="nav-item d-flex align-items-center flex-grow-1">
                            <div class="search-bar">
                                <input id="search-input" type="text" name="search-input" placeholder="Search..." value=""/>
                                <button id="search-button" type="submit" name="search-button">
                                    <svg style="width: 24px; height: 24px" viewBox="0 0 24 24">
                                        <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                                    </svg>
                                </button>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - PinPoint - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>