@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Domain.Entities
@inject SignInManager<User> SignInManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiForgery

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @if (SignInManager.IsSignedIn(User))
    {
        <meta name="X-CSRF-TOKEN" content="@AntiForgery.GetAndStoreTokens(Context).RequestToken" />
    }

    <title>PinPoint</title>

    <link rel="icon" type="image/svg" href="~/icons/logo-head.svg"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/default-style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/root.css" asp-append-version="true"/>
</head>
<body>
@RenderBody()
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>