@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true"/>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="avatar-wrapper">
                <img src="~/icons/logo-head.svg" alt="Avatar" class="avatar">
            </div>
        </li>
        <li class="nav-item">
            <form class="logout-form flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <div class="button-a">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                        <button type="submit" class="nav-link btn btn-link">Logout</button>
                    </a>
                </div>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <div class="button-a accent">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Log In</a>
            </div>
        </li>
    }
</ul>