@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/components/button.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/components/searchbar.css"/>

<div class="page-wrapper">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/icons/logo.svg" alt="pinpoint-logo" class="logo-image"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between gap-2">
                    <ul class="navbar-nav d-flex align-items-center flex-grow-1 gap-2">
                        <li class="nav-item d-flex align-items-center">
                            <div class="anchor-button">
                                <a class="nav-link" asp-area="" asp-controller="Pins" asp-action="Index">Pin It!</a>
                            </div>
                        </li>
                        <li class="nav-item d-flex align-items-center flex-grow-1">
                            <div class="search-bar">
                                <form asp-area="" asp-controller="Home" asp-action="Search" method="get" id="search-input-form">
                                    <input id="search-input" type="text" name="titleQuery" placeholder="Search..." value="" />
                                    <button id="search-button" type="submit" name="search-button">
                                        <svg style="width: 24px; height: 24px" viewBox="0 0 24 24">
                                            <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - PinPoint - <a asp-area="" asp-controller="Home" asp-action="About">About Us</a>
    </div>
</footer>